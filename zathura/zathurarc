# Mappings
map ; focus_inputbar :

map <C-d> toggle_page_mode toggle

map u scroll half-up
map d scroll half-down

map <C-u> scroll full-up
map <C-f> scroll full-down

map <Left> navigate previous
map <Right> navigate next

map R rotate rotate-ccw
map <C-R> reload

map <C-p> navigate previous
map <C-n> navigate next

map <BackSpace> navigate previous
map <Space>     navigate next

map <C-g> toggle_statusbar

map + zoom
map = zoom in
map - zoom out

# Options
set guioptions ""
set font "Hack 10"
set selection-clipboard "primary"
set smooth-scroll true
set adjust-open width

# Colors
set recolor false
set recolor-darkcolor "#c0b18b"
set recolor-lightcolor "#1f1f1f"

set default-bg "#1f1f1f"
set default-fg "#c0b18b"

# Statusbar
set statusbar-bg "#1f1f1f"
set statusbar-fg "#c0b18b"

# Inputbar
set inputbar-fg "#c0b18b"
set inputbar-bg "#1f1f1f"

# Notifications
set notification-fg "#c0b18b"
set notification-bg "#1f1f1f"
set notification-error-bg "#1f1f1f"
set notification-warning-bg "#1f1f1f"

# Tabbar
set tabbar-fg "#c0b18b"
set tabbar-bg "#1f1f1f"
set tabbar-focus-fg "#d17b49"
set tabbar-focus-bg "#1f1f1f"

# Completion
set completion-fg "#c0b18b"
set completion-bg "#1f1f1f"
set completion-highlight-fg "#1f1f1f"
set completion-highlight-bg "#d17b49"
set completion-group-bg "#1f1f1f"
set completion-group-fg "#775759"

# Index
set index-fg "#c0b18b"
set index-bg "#1f1f1f"
set index-active-fg "#1f1f1f"
set index-active-bg "#d17b49"
